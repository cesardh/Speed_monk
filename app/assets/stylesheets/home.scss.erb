@import "font-awesome-sprockets";
@import "font-awesome";

$fondo: #7f5858;
$cuadros: url(<%= asset_path 'cuadros.png' %>);

*{
  padding: 0;
  box-sizing: border-box;
}

#wrapper{
  position: absolute;
  height: 100%;
  width: 100%;
  min-height: 300px;
  min-width: 500px;
  overflow-y: hidden;
  overflow-x: auto;


}

#wrapper>.landing{
  background-color: $fondo;
  position: relative;
  width: 200%;
  height: inherit;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;


}


.landing>.seccion{
  position: relative;
  color: white;
  width: 50%;
  height: inherit;
  flex: 0 1 auto;
}

.container{
  margin: 0 auto;
  width: 90%;
  max-width: 1000px;
  min-width: 500px;
  height: inherit;
  min-height: 600px;
  position: relative;
  background-image: $cuadros;
  background-attachment: fixed;

}

.home img{
  position: absolute;
}

.templo{
  width: 110%;
  left: -5%;
}

.logo{
  width: 45%;
  right: 0%;
  top: 5%;
}

.monje{
  width: 85%;
  left: -5%;
  top: 10%;

}

.g_video{
  width: 8%;
  left: 40%;
  top: 40%;
}

.g_play{
  width: 12%;
  right: 2%;
  top: 50%;
}


#social{
  position: fixed;
  bottom: 20px;
  text-align: center;
  width: 100%;
  z-index: 2;

}

#social i{
  color: white;
  font-size: 0.9em;
  margin: 0 20px;
  vertical-align: baseline;
}

