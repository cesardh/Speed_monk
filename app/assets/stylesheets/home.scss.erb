@import "font-awesome-sprockets";
@import "font-awesome";

$fondo: #7f5858;
$cuadros: url(<%= asset_path 'cuadros.png' %>);
$ref: url(<%= asset_path 'fondo.png' %>);

*{
  padding: 0;
  box-sizing: border-box;
}

body{
  background-color: $fondo;
}

#wrapper{
  height: 100%;
  width: 100%;
  position: absolute;
  overflow: hidden;

  >.landing{
    position: absolute;
    display: flex;
    display: -webkit-flex;
    width: 200%;

    >.section{
      -webkit-flex: 1;
      flex: 1;
      position:relative;

    }
  }
}

.home{

  >.container{
    margin: auto;
    width: 1000px;
    height: 600px;
    position: relative;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: $cuadros;
    background-attachment: fixed;

    img{position: absolute;}
  }
}


.grad{
  position: fixed;
  height: 110%;
  width: 100%;
  z-index: 100;

  background: rgba(0,0,0,0);
  background: -moz-radial-gradient(center, ellipse cover, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 11%, rgba(0,0,0,0.5) 64%, rgba(0,0,0,0.5) 100%);
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(0,0,0,0)), color-stop(11%, rgba(0,0,0,0)), color-stop(64%, rgba(0,0,0,0.5)), color-stop(100%, rgba(0,0,0,0.5)));
  background: -webkit-radial-gradient(center, ellipse cover, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 11%, rgba(0,0,0,0.5) 64%, rgba(0,0,0,0.5) 100%);
  background: -o-radial-gradient(center, ellipse cover, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 11%, rgba(0,0,0,0.5) 64%, rgba(0,0,0,0.5) 100%);
  background: -ms-radial-gradient(center, ellipse cover, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 11%, rgba(0,0,0,0.5) 64%, rgba(0,0,0,0.5) 100%);
  background: radial-gradient(ellipse at center, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 11%, rgba(0,0,0,0.5) 64%, rgba(0,0,0,0.5) 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#000000', endColorstr='#000000', GradientType=1 );
}

.templo{width: 110%; left: -5%;}

.logo{width: 45%; right: 0%; top: 5%;}

.monje{width: 85%; left: -5%; top: 10%;}

#g_video{
  width: 8%;
  left: 40%;
  top: 40%;
  z-index: 101;
}

#g_play{
  width: 12%;
  right: 2%;
  top: 50%;
  z-index: 101;
}

.bambu2{
  left: 90%;
  height: 150%;
  opacity: 0.8;
  top: -15%;
}

.bambu1{
  left: -25%;
  height: 150%;
  opacity: 0.8;
  top: -15%;
}



.btn{
  &:hover{
    cursor: pointer;
  }
}


#social{
  position: fixed;
  bottom: 20px;
  text-align: center;
  width: 100%;
  z-index: 101;

  >a{
    color: white;
    font-size: 0.9em;
    vertical-align: baseline;
    height: 15px;
    width: 15px;
    padding: 5px;
    opacity: 0.6;
    margin: 20px;

    &:hover{
      opacity: 1;
    }
  }
}

.games{

  >.container{
    display: flex;
    display: -webkit-flex;
    width: 900px;
    height: 300px;
    margin: 0 auto;
    top: 30%;
    position: relative;

    >.option{
      flex: 1;
      margin: 50px;
      background-color: lightyellow;
      background-size: cover;
      position: relative;
    }

  }
}
