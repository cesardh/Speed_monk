@import "font-awesome-sprockets";
@import "font-awesome";

$fondo: #7f5858;
$cuadros: url(<%= asset_path 'cuadros.png' %>);

$j1: url(<%= asset_path 'juego1.png' %>);
$j2: url(<%= asset_path 'juego2.png' %>);
$j3: url(<%= asset_path 'juego3.png' %>);

$cafe: #3a2121; /*CafÃ© oscuro*/
$claro: #fcefe6; /*claro*/

*{
  padding: 0;
  box-sizing: border-box;
}

body{
  background-color: $fondo;
}

#wrapper{
  height: 100%;
  width: 100%;
  position: absolute;
  overflow: hidden;

  >.landing{
    position: absolute;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    width: 200%;
    height: inherit;

    >.section{
      -ms-flex: 1;
          flex: 1;
      position:relative;
      height: inherit;

    }
  }
}

.home{

  >.container{
    margin: auto;
    width: 1000px;
    height: 600px;
    bottom: 0;
    top: -50px;
    left: 0;
    right: 0;
    position: absolute;
    background-image: $cuadros;
    background-attachment: fixed;

    img{position: absolute;}
  }
}

.games{

  >.container{
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    width: 1000px;
    height: 333px;
    margin: 0 auto;
    top: 300px;
    position: relative;
    z-index: 101;

    >.option{
      -ms-flex: 1;
          flex: 1;
      margin: 50px;
      background-size: cover;
      position: relative;
    }
    .j1{
      background-image: $j1;
    }
    .j2{
      background-image: $j2;
    }
    .j3{
      background-image: $j3;
    }

  }
}

#about{
  display: none;
  position: absolute;
  width: 1000px;
  height: 500px;
  background: $cafe;
  z-index: 300;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  color: $claro;
  margin: auto;
  border-radius: 30px;
  padding:20px;

}

.templo{width: 110%; left: -5%;}

.logo{width: 45%; right: 0%; top: 5%;}

.monje{width: 85%; left: -5%; top: 10%;}

#g_video{
  width: 8%;
  left: 40%;
  top: 40%;
  z-index: 201;
}

iframe{
  width: 100%;
  height: 100%;
}

#g_play{
  width: 12%;
  right: 2%;
  top: 50%;
  z-index: 140;
}

#g_info{
  width: 6%;
  right: 10%;
  top: 70%;
  z-index: 101;
  opacity: 0.7;
}

.bambu2{
  left: 90%;
  height: 150%;
  opacity: 0.8;
  top: -15%;
}

.bambu1{
  left: -25%;
  height: 150%;
  opacity: 0.8;
  top: -15%;
}


.btn{
  &:hover{
    cursor: pointer;
    opacity: 0.6;
  }
}


footer{
  position: fixed;
  bottom: 0;
  margin-bottom:10px;
  text-align: center;
  width: 100%;
  z-index: 202;

  ul li{
    display: inline;
    list-style: none;
    text-decoration: none;
    font-size: 0.8em;

    a{
      color: $claro;
      opacity: 0.6;
      text-decoration: none;
    }
  }

  >ul>li{
    margin:0 1.5em;

    >a{
      padding: 10px;

      &:hover{
        opacity: 1;
      }
    }
  }

  #idioma{
    position:relative;
    display: inline-block;

    li{
      position: relative;
      display: block;
    }

    ul{
      display: none;
      position: absolute;
      bottom: 20px;
      background:$cafe;
      border-radius: 7px;
      width: 50px;
      padding: 5px;

      >li a{
        padding: 7px;
        display: block;
        border-radius: 50%;
        font-weight: bold;

        &:hover{
          text-decoration: underline;
        }
      }
    }
  }

  #legal>div{
    display: none;
    position:fixed;
    width: 100%;
    height: 400px;
    border-radius: 50px 50px 0 0;
    background-color: $cafe;
    text-align: center;
    bottom: 0;
    color: white;
    z-index: 300;
    opacity: 0.8;
  }
}


#video{
  z-index: 200;
  position:absolute;
  display: none;
  height: 100%;
  width: 100%;
  background-color: black;
  text-align: center;
  vertical-align: center;
}

.grad{
  position: fixed;
  height: 110%;
  width: 100%;
  z-index: 100;

  background: rgba(0,0,0,0);
  background: radial-gradient(ellipse at center, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 11%, rgba(0,0,0,0.5) 64%, rgba(0,0,0,0.5) 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#000000', endColorstr='#000000', GradientType=1 );
}